{
  "company_info": {
    "name": "Gcore",
    "tagline": "Global Edge Computing and CDN Provider",
    "founded": "2014",
    "headquarters": "Luxembourg",
    "global_reach": "210+ Points of Presence",
    "average_latency": "30ms"
  },
  "language": {
    "variant": "american_english",
    "spelling_preferences": {
      "suffix_ize": "Use -ize not -ise (optimize, customize, organize)",
      "suffix_or": "Use -or not -our (color, behavior, favor)",
      "suffix_er": "Use -er not -re (center, meter, fiber)",
      "suffix_og": "Use -og not -ogue (catalog, dialog, analog)",
      "doubled_consonants": "American style (canceled, labeled, traveled)"
    },
    "common_corrections": {
      "optimise": "optimize",
      "customise": "customize",
      "organise": "organize",
      "analyse": "analyze",
      "colour": "color",
      "behaviour": "behavior",
      "favour": "favor",
      "centre": "center",
      "fibre": "fiber",
      "metre": "meter",
      "cancelled": "canceled",
      "labelled": "labeled",
      "travelling": "traveling",
      "defence": "defense",
      "licence": "license",
      "catalogue": "catalog"
    }
  },
  "numbers": {
    "spell_out_under": 10,
    "range_format": "words",
    "range_format_note": "Use 'five to ten' not '5-10' or '5–10'",
    "technical_exceptions": [
      "version numbers (version 3)",
      "percentages (5%)",
      "measurements (4 TB, 8 GB)",
      "technical specs (3 ms, 2 vCPUs)",
      "when mixed with numbers 10+ in same sentence"
    ],
    "ordinals": "spell_out",
    "ordinals_note": "Use first, second, third (not 1st, 2nd, 3rd)",
    "thousands_separator": "comma",
    "avoid_monetary_amounts": true,
    "avoid_monetary_note": "Use ranges or qualitative descriptions when possible"
  },
  "pronouns": {
    "avoid_first_person": true,
    "prefer_second_person": true,
    "first_person_exceptions": [
      "When Gcore is explicitly the subject (Gcore offers...)"
    ],
    "replacements": {
      "We recommend": "The recommended approach is",
      "We offer": "Gcore offers",
      "Our platform": "The Gcore platform",
      "our servers": "Gcore servers",
      "We'll show you": "This guide shows"
    }
  },
  "style_references": {
    "primary": "Chicago Manual of Style",
    "technical_terminology": [
      "Google Cloud (GCP)",
      "DigitalOcean",
      "AWS"
    ],
    "secondary": [
      "Google Developer Style Guide",
      "Microsoft Writing Style Guide"
    ]
  },
  "timeless_documentation": {
    "description": "Write content that doesn't become outdated (Google Style Guide)",
    "words_to_avoid": [
      "currently",
      "now",
      "new",
      "newer",
      "latest",
      "soon",
      "eventually",
      "as of this writing",
      "does not yet",
      "old",
      "older",
      "presently",
      "at present",
      "existing",
      "in the future"
    ],
    "guidance": "Remove these words or replace with specific version numbers, dates, or timelines",
    "exceptions": [
      "Release notes and changelogs",
      "Version-specific documentation",
      "Blog posts with publication dates"
    ]
  },
  "inclusive_language": {
    "description": "Use inclusive, bias-free terminology (Google Style Guide)",
    "required_replacements": {
      "blacklist": "denylist",
      "whitelist": "allowlist",
      "master/slave": "primary/replica",
      "master branch": "main branch",
      "man-hours": "person-hours",
      "sanity check": "quick check",
      "dummy value": "placeholder value",
      "grandfathered": "legacy",
      "mankind": "humanity",
      "man-made": "artificial"
    },
    "ableist_terms_to_avoid": {
      "crazy": "unexpected",
      "insane": "unusual",
      "blind to": "unaware of",
      "cripple": "disable",
      "dumb": "silent",
      "lame": "inadequate"
    },
    "gender_neutral": {
      "guidance": "Use they/their for singular unknown person",
      "avoid": ["he/she", "his/her", "mankind"]
    }
  },
  "date_time_format": {
    "date_formats": {
      "running_text": "January 19, 2025",
      "technical_iso": "2025-01-19",
      "avoid": ["1/19/25", "19/1/2025"]
    },
    "time_formats": {
      "standard": "3:45 PM",
      "round_hours": "3 PM",
      "ranges": "9 AM to 5 PM",
      "avoid": ["3:45PM", "3:00 PM", "15:45"]
    },
    "guidelines": [
      "Spell out month names in running text",
      "Use four-digit years only",
      "Avoid season names (spring, summer) - use months or quarters",
      "Specify time zone when relevant"
    ]
  },
  "units_format": {
    "spacing_rules": {
      "with_space": ["64 GB", "100 ms", "30 Mbps"],
      "no_space": ["$10", "65%", "90°"]
    },
    "ranges": {
      "correct": "10 GB to 20 GB",
      "avoid": "10-20 GB"
    },
    "rates": {
      "running_text": "requests per second",
      "technical_specs": "req/s (acceptable in tables)"
    },
    "thousands": {
      "notation": "55k operations",
      "separator": "1,000"
    }
  },
  "style_rules": {
    "tone": "formal_but_approachable",
    "voice": "authoritative_yet_friendly",
    "use_contractions": true,
    "sentence_case_headings": true,
    "formal_tone": true,
    "avoid_competitors": true,
    "max_sentence_length": 30,
    "max_paragraph_length": 150,
    "use_active_voice": true,
    "use_second_person": true,
    "avoid_first_person": true,
    "use_serial_comma": true
  },
  "terminology": {
    "preferred": {
      "CDN": "CDN",
      "edge_computing": "edge computing",
      "points_of_presence": "Points of Presence",
      "pops": "PoPs",
      "edge_servers": "edge servers",
      "cloud_computing": "cloud computing",
      "infrastructure": "infrastructure",
      "latency": "latency",
      "bandwidth": "bandwidth",
      "performance": "performance",
      "scalability": "scalability",
      "reliability": "reliability",
      "security": "security",
      "DDoS_protection": "DDoS protection",
      "SSL_TLS": "SSL/TLS",
      "API": "API",
      "SLA": "SLA",
      "uptime": "uptime"
    },
    "avoid": {
      "content_delivery_network": "Use 'CDN' instead",
      "edge_nodes": "Use 'edge servers' or 'PoPs' instead",
      "cloud": "Be specific: 'cloud computing' or 'cloud infrastructure'",
      "fast": "Use specific metrics like '30ms latency'",
      "cheap": "Use 'cost-effective' or 'affordable'",
      "best": "Use 'leading' or 'advanced'",
      "revolutionary": "Use 'innovative' or 'advanced'",
      "cutting-edge": "Use 'modern' or 'advanced'"
    }
  },
  "content_guidelines": {
    "introduction": {
      "structure": "Direct answer first, then expansion",
      "length": "2-3 sentences",
      "requirements": [
        "Answer the main question immediately",
        "Include primary keyword in first sentence",
        "Set context for the rest of the content"
      ]
    },
    "body_content": {
      "paragraph_structure": "Topic sentence + 2-3 supporting sentences",
      "evidence": "Include statistics, metrics, or examples",
      "transitions": "Use natural transitions between sections",
      "gcore_context": "Mention Gcore capabilities where relevant"
    },
    "technical_content": {
      "accuracy": "Ensure technical accuracy",
      "explanation_level": "Explain technical concepts clearly",
      "examples": "Include practical examples",
      "metrics": "Use specific performance metrics"
    }
  },
  "seo_guidelines": {
    "keyword_density": {
      "primary": "2-3%",
      "secondary": "1-2%",
      "semantic": "Natural inclusion"
    },
    "meta_descriptions": {
      "length": "150-160 characters",
      "include_keyword": true,
      "include_cta": false
    },
    "internal_linking": {
      "frequency": "2-3 per 500 words",
      "relevance": "Only link to related content",
      "anchor_text": "Use descriptive anchor text"
    }
  },
  "formatting": {
    "headings": {
      "case": "sentence",
      "punctuation": "no_end_punctuation",
      "length": "max_10_words"
    },
    "lists": {
      "bullet_style": "•",
      "numbering": "1. 2. 3.",
      "capitalization": "sentence_case",
      "punctuation": "period_for_complete_sentences"
    },
    "emphasis": {
      "bold": "**text**",
      "italic": "*text*",
      "code": "`code`"
    }
  },
  "prohibited": {
    "words": [
      "cheap",
      "best",
      "number one",
      "guaranteed",
      "revolutionary",
      "groundbreaking",
      "game-changing"
    ],
    "phrases": [
      "the best in the industry",
      "unmatched performance",
      "the only solution",
      "guaranteed results"
    ],
    "claims": [
      "Unsubstantiated performance claims",
      "Comparative claims without data",
      "Absolute statements without evidence"
    ]
  }
}